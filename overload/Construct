Export qw( BIN LIB INCLUDE CONS );

$LIB = "#export/lib";
$BIN = "#export/bin";
$INCLUDE = "#export/include";
$LIBRARIES = "-lstringutils -lgnutella2";

$CONS = new cons(
	CPPPATH => $INCLUDE,
	LIBS    => $LIBRARIES,
	LIBPATH => $LIB,
	CFLAGS  => "-Wall -g"
);

Build qw(
	src/Conscript
	src/stringutils/Conscript
	src/gnutella2/Conscript
);
